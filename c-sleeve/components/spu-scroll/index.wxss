/* components/spu-scroll/index.wxss */
@import "../../wxss/sleeve.wxss";
.container{
  padding: 42rpx 0 34rpx 28rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #ffffff;
}
.title{
  width: 692rpx;
  height: 90rpx;
}
.price-value{
  font-size: 26rpx !important;
  color: #157658 !important;
  font-weight: 800 !important;
}
.price-unit{
  font-weight: 800 !important;
  font-size: 24rpx !important;
  color: #157658 !important;
}
.spu-img{
  width:160rpx;
  height: 160rpx;
}
.spu-container{
  margin-right: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.scroll-view{
  margin-top: 28rpx;
  display: flex;
  flex-direction: row;
}
.inner{
  display: flex;
  flex-direction: row;
}
.spu-text{
  font-size: 20rpx;
  color: #666666;
  margin-top: 20rpx;/*
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;*/
}
